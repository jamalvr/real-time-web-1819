<!DOCTYPE html>
<html class="no-js">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Weather drinking game</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <base href="/">
        <link rel="stylesheet" type="text/css" href="css/rtw.css">
    </head>

    <body>
        <div class="game-container">
            <header>
                <h1>The weather game 🌤 ⛈ ☀️</h1>
                <button id="cheat-sheet-button">🖕</button>
            </header>

            <div id="cheat-sheet" class="cheat-sheet hide">
                <!-- generated content -->
            </div>

            <div id="user-container" class="user-container">
                <ol id="user-list" class="user-list">
                    <!-- generated content -->
                </ol>
            </div>

            <div class="current-question">
                <div id="current-city" class="current-city">
                    <!-- generated content -->
                </div>

                <ul id="current-answers" class="current-answers">
                    <!-- generated content -->
                </ul>
            </div>

            <div id="start-button" class="start-button">
                <button class="game-start hide">Start Game</button>
            </div>

            <div class="input-container">
                <form id="username" class="username hide">
                    <h3 class="title">Enter name</h3>
                    <input class="username-input" type="text" maxlength="14" />
                    <button type="submit" value="submit" form="username">Join</button>
                </form>

                <form id="city" class="city hide">
                    <h3 class="title">Enter your favorite city</h3>
                    <input class="city-input" type="text" maxlength="14" />
                    <button type="submit" value="submit" form="city">Enter</button>
                </form>
            </div>

            <div id="chicken-dinner" class="chicken-dinner hide">

            </div>
        </div>

        <script src="/socket.io/socket.io.js"></script>
        <script src="js/client.js"></script>
    </body>

</html>